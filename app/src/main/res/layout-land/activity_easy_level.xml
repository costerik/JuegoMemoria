<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    tools:context="com.example.erik.juegomemoria.EasyLevel"
    android:background="@color/accent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:textColor="@color/primary_light"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewEasy"
        android:background="@color/accent_material_light"
        android:textSize="70sp"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:layout_weight="1"
        android:hint="START!!!"
        android:textColorHint="@color/primary_light"
        android:gravity="center"/>

    <TableLayout
        android:layout_width="316dp"
        android:layout_height="141dp"
        android:layout_gravity="center_horizontal">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/buttoneasy"
                android:layout_column="0"
                android:layout_weight="50"
                android:fontFamily="sans-serif-condensed"
                android:textSize="50sp"
                android:textColor="#FFF" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button2easy"
                android:layout_column="1"
                android:layout_weight="50"
                android:fontFamily="sans-serif-condensed"
                android:textSize="50sp"
                android:textColor="#FFF" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button3easy"
                android:layout_column="2"
                android:layout_weight="50"
                android:fontFamily="sans-serif-condensed"
                android:textSize="50sp"
                android:textColor="#FFF" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button4easy"
                android:layout_column="3"
                android:layout_weight="50"
                android:fontFamily="sans-serif-condensed"
                android:textSize="50sp"
                android:textColor="#FFF" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button5easy"
                android:layout_column="0"
                android:layout_weight="50"
                android:fontFamily="sans-serif-condensed"
                android:textSize="50sp"
                android:textColor="#FFF" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button6easy"
                android:layout_column="1"
                android:layout_weight="50"
                android:fontFamily="sans-serif-condensed"
                android:textSize="50sp"
                android:textColor="#FFF" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button7easy"
                android:layout_column="2"
                android:layout_weight="50"
                android:fontFamily="sans-serif-condensed"
                android:textSize="50sp"
                android:textColor="#FFF" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/button8easy"
                android:layout_column="3"
                android:layout_weight="50"
                android:fontFamily="sans-serif-condensed"
                android:textSize="50sp"
                android:textColor="#FFF" />
        </TableRow>
    </TableLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/accent_material_light"
            android:textColor="@color/primary_light"
            android:text="Score"
            android:id="@+id/button9easy" />
    </LinearLayout>

</LinearLayout>
